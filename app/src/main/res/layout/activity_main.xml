<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0096fa"

    android:orientation="vertical"
    tools:context="com.jimmy.onesecond.MainActivity">


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="你的一秒有多长"
        android:textSize="30sp"
        android:gravity="center"
        android:background="#88dd"
        />


    <TextView
        android:layout_margin="5dp"

        android:layout_marginTop="20dp"
        android:layout_below="@id/tv_title"
        android:id="@+id/tv_introduce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:text="长按按钮，看看你的一秒多久，按住误差0.1秒,你就是大神"

        />




    <LinearLayout
        android:layout_centerInParent="true"
        android:id="@+id/ll_btn"
        android:layout_width="200dp"
        android:layout_height="80dp"

        android:background="@drawable/o9"
        android:clickable="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="现在开始"

            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10.96"
            android:textSize="13sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="碉堡了你是大神"
            android:textSize="13sp"
            android:visibility="gone" />

    </LinearLayout>


    <TextView

        android:layout_below="@id/ll_btn"
        android:id="@+id/tv_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_below="@id/tv_normal"
        android:id="@+id/tv_god"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        />

   <LinearLayout
       android:layout_alignParentBottom="true"
       android:layout_alignParentRight="true"
       android:layout_width="wrap_content"
       android:orientation="vertical"
       android:layout_margin="10dp"
       android:padding="10dp"
       android:layout_height="wrap_content">



       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="想获取更多资源欢迎来到：极客A计划"
           android:textSize="15sp"

           />

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="qq群号：194343904"
           android:textSize="15sp"

           />

       <ImageView

           android:layout_alignParentBottom="true"
           android:layout_alignParentRight="true"
           android:id="@+id/iv_portrait"
           android:src="@mipmap/portrait"
           android:layout_width="90dp"
           android:layout_height="50dp" />

   </LinearLayout>





</RelativeLayout>
